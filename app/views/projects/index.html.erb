<% provide(:title, "#{Date.today.strftime('%Y年%m月')}の案件一覧") %>

<div class="container loggedin-container">
  <h1><%= yield(:title) %></h1>

  <div id="projects-top">
  <form id="project-form">
    <h2>タスク登録</h2>
    <div class="project-form-group">
      <label for="client-list">クライアント名<span>※</span></label>
      <select id="client-list">
        <option value="">--リストから選んでください--</option>
        <option value="">Ａ社</option>
      </select>
    </div>

    <div class="project-form-group">
      <label for="project">案件名（キーワードなど）<span>※</span></label>
      <input type="text" name="project" id="project" placeholder="案件名" required>
    </div>

    <div class="project-form-group">
      <label for="task-list">タスクの種類</label>
      <select id="task-list">
        <option value="">--リストから選んでください--</option>
        <option value="structure">構成作成のみ</option>
        <option value="writing">原稿執筆のみ</option>
        <option value="cms">CMS入稿のみ</option>
        <option value="structure-writing">構成作成+原稿執筆</option>
        <option value="writing-cms">原稿執筆+CMS入稿</option>
        <option value="structure-writing-cms">構成作成+原稿執筆+CMS入稿</option>
        <option value="structure-check">ライターの構成チェック</option>
        <option value="writing-check">ライターの原稿チェック</option>
        <option value="cms-check">ライターの入稿記事チェック</option>
        <option value="select-keyword">キーワード選定</option>
        <option value="other">その他タスク</option>
      </select>
    </div>

    <div class="project-form-group task-name">
      <label for="other-task">タスク名</label>
      <input type="text" name="other-task" id="other-task" placeholder="タスク名" required>
    </div>

    <div class="project-form-group date-group structure-date">
      <label for="formation-deadline">構成の期日</label>
      <input type="date" name="formation-deadline" id="formation-deadline" required>
    </div>

    <div class="project-form-group date-group writing-date">
      <label for="manuscript-deadline">原稿執筆の期日</label>
      <input type="date" name="manuscript-deadline" id="manuscript-deadline" required>
    </div>

    <div class="project-form-group date-group cms-date">
      <label for="cms-deadline">CMS入稿の期日</label>
      <input type="date" name="cms-deadline" id="cms-deadline" required>
    </div>

    <div class="project-form-group date-group other-date">
      <label for="other-deadline">タスクの期日</label>
      <input type="date" name="other-deadline" id="other-deadline" required>
    </div>

    <div class="project-form-group">
      <label for="reward">報酬</label>
      <input type="text" inputmode="numeric" name="reward" id="reward" placeholder="報酬" required>
    </div>

    <div class="project-form-group">
      <label for="url">URL</label>
      <input type="url" name="url" id="url" placeholder="Googleドキュメントのリンクなど">
    </div>

    <div class="project-form-group">
      <label for="note">備考</label>
      <input type="text" name="note" id="note" placeholder="備考">
    </div>

    <div class="project-form-group project-submit-group">
      <button type="submit" class="btn btn-fill" id="project-submit">登録</button>
    </div>
  
  </form>
  <table>
    <tr>
      <th>目標の売上</th>
      <th>今月の売上</th>
    </tr>
    <tr>
      <td></td>
      <td></td>
    </tr>
  </table>
  </div>

 <table id="projects-table">
  <thead>
    <tr>
      <th rowspan="2">編集</th>
      <th rowspan="2">ステータス</th>
      <th rowspan="2">クライアント</th>
      <th rowspan="2">案件名</th>
      <th colspan="3">タスク</th>
      <th rowspan="2">報酬</th>
      <th rowspan="2">URL</th>
      <th rowspan="2">合計作業時間</th>
      <th rowspan="2">時給</th>
      <th rowspan="2">備考</th>
    </tr>
    <tr>
      <th>種類</th>
      <th>期日</th>
      <th>状態</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td rowspan="4"><button>編集</button></td>
      <td rowspan="4">進行中</td>
      <td rowspan="4">A社</td>
