<% provide(:title, "案件管理") %>

<div class="container projects-container">
  <%= @days_in_the_month %>
  <div id="projects-table-container">  
    <table id="projects-table">
      <tr>
        <th rowspan="2" class="numbers fixed">No</th>
        <th rowspan="2" class="client fixed">クライアント</th>
        <th rowspan="2" class="project-name fixed">名前</th>
        <th rowspan="2" class="type fixed">種類</th>
        <th rowspan="2" class="status fixed">ステータス</th>
        <th colspan="<%= @days_in_the_month %>" class="status fixed">2025/1</th>
      </tr>
      <tr>
        <% @calendar_data.each do |data| %>
          <th class="calendar-day"><%= data[:month] %>/<%= data[:date].day %></th>
        <% end%>
      </tr>
      <tr>
        <td class="numbers fixed">1</td>
        <td class="client fixed">A社</td>
        <td class="project-name fixed">クレジットカード おすすめ</td>
        <td class="type fixed">構成</td>
        <td class="status fixed">未着手</td>
      </tr>
    </table>
  </div>
</div>