<% provide(:title, "新規登録") %>
<div class="container form-container">
  <h1>新規アカウント作成</h1>
  <%= form_with(model: @user) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control', required: true %>
      <small class="form-text">※10文字以上、半角英数字の両方を含んでください</small>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード（確認）" %>
      <%= f.password_field :password_confirmation, class: 'form-control', required: true %>
    </div>
    <div class="form-group">
      <small>WriterTaskへのアカウント登録で<%= link_to "利用規約", terms_path %>および<%= link_to "プライバシーポリシー", privacy_policy_path %>に同意したものとみなします。</small>
    </div>
    <div class="form-group">
      <%= f.submit "アカウント作成", class: 'btn btn-fill btn-submit' %>
    </div>
  <% end %>
</div>
